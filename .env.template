# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key

# AWS Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region
AWS_BUCKET_NAME=your_bucket_name

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=utom_video_processing_db

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_QUEUE=utom_video_processing_queue

# Video Processing Configuration
WHISPER_MODEL=base
MAX_VIDEO_DURATION=3600  # 1 hour in seconds
TEMP_DIR=/tmp

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# SQS Configuration
SQS_QUEUE_ARN=  # Will be populated by setup script

# Lambda Configuration
LAMBDA_ROLE_ARN=  # Will be populated by setup script

# Video Processing Configuration
VIDEO_PROCESSING_TIMEOUT=1200 